

@model SBMSwebApp.Models.Models.CustomerViewModel
@{
    ViewBag.Title = "SaveCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-group" style="border:1px solid #00ff21; padding: 5px;">
    <h4 style="font-family:'Bookman Old Style';" align="center">Add Customer</h4>
</div>
<div class="container" style="width:100%;">
    <div class="form-group row">
        <a href="/Customer/Index" class="btn btn-info"><i class="glyphicon glyphicon-list"></i> Customer List</a><hr />

        @if (ViewBag.Message != null)
        {
            <h3 width="60%" align="center" class="label-danger">@ViewBag.Message</h3>

        }
    </div>
</div>

<div class="container">
    <form method="post">
        <input type="hidden" name="IsActive" value="True" />
        <input type="hidden" name="Date" value="@DateTime.Now" />
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Code</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Code" placeholder="Enter customer code" value="@if (Model != null) { @Model.Code}" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Name</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Name" placeholder="Enter customer name" value="@if (Model != null) { @Model.Name}" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Address</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Address" placeholder="Enter customer Address" value="@if (Model != null) { @Model.Address}" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Email</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Email" placeholder="Enter customer Email" value="@if (Model != null) { @Model.Email}" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Contact</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Contact" placeholder="Enter customer Contact" value="@if (Model != null) { @Model.Contact}" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Loyalty Point</label>
            </div>
            <div class="col-md-5">
                <input type="number" class="form-control" name="LoyaltyPoint" placeholder="Enter customer Loyalty Point" value="@if (Model != null) { @Model.LoyaltyPoint}" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4"></div>
            <div class="col-md-5">
                <input type="submit" class="btn btn-block btn-success" value="Save" />
            </div>
        </div>
    </form>
</div>


