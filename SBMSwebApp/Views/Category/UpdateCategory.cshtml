

@model SBMSwebApp.Models.Models.CategoryViewModel
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-group" style="border:1px solid #00ff21; padding: 5px;">
    <h4 style="font-family:'Bookman Old Style';" align="center">Update Category</h4>
</div>
<div class="container" style="width:100%">
    <div class="form-group row">
        <a href="/Category/Index" class="btn btn-info"><i class="glyphicon glyphicon-list"></i> Category List</a><hr />

    </div>
</div>
<div class="container" style="width:100%;">
    <div class="form-group row">
        
       
        @if (ViewBag.Message != null)
        {
            <h5 width="60%" align="center" class="label-danger">@ViewBag.Message</h5>

        }
    </div>
</div>

@if (Model != null)
{
    <div class="container">
        <form method="post">
            <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
            <input type="hidden" name="IsActive" value="True" />
            <input type="hidden" name="Date" value="@DateTime.Now" />
            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-2" style="text-align:right; padding:5px ">
                    <label>Category Name</label>
                </div>
                <div class="col-md-5">
                    <input type="text" class="form-control" name="CategoryName" value="@Model.CategoryName" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-2" style="text-align:right; padding:5px ">
                    <label>Code</label>
                </div>
                <div class="col-md-5">
                    <input type="text" class="form-control" name="CategoryCode" value="@Model.CategoryCode" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4"></div>
                <div class="col-md-5">
                    <input type="submit" class="btn btn-block btn-success" value="Update" />
                </div>
            </div>
        </form>
    </div>
}



