@model SBMSwebApp.Models.Models.CategoryViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="form-group" style="border:1px solid #00ff21; padding: 10px;">
    <h4 style="font-family:'Bookman Old Style'; border-bottom:thick" align="center">Category List</h4>
</div>
<div class="container" ">
    <form method="post">
        <div class="form-group row">
            <div class="col-md-6 float-left">
                <a  href="/Category/SaveCategory" class="btn btn-info"><i class="fa fa-plus-circle"></i> <b>Add Category</b></a>
            </div>
            <div class="col-md-4 float-right">
                @Html.TextBoxFor(c => c.SearchText, new { @class = "form-control", placeholder = "Search Category" })
            </div>
            <div class="col-md-2 float-right">
                <input type="submit" value="Search" class="btn btn-block btn-primary" />
            </div>
        </div>
    </form>
</div>

@if (Model != null)
{
    <div class="container"  style="width:100%; border:1px solid #00ff21;">
        <div class="form-group row " >
            <table class="table table-bordered table-hover table-striped">
                <thead style="background-color:forestgreen; color:white; text-align:center; font-weight:bold">
                    <tr class="font-weight-light" >
                        <td style="padding:1px 1px 1px 1px">SL</td>
                        <td style="padding:1px 1px 1px 1px">Code</td>
                        <td style="padding:1px 1px 1px 1px">Category Name</td>
                        <td style="padding:1px 1px 1px 1px">Action</td>
                    </tr>
                </thead>
                <tbody style="text-align:center; font-weight:initial">
                    @{ int sl = 1;}
                    @foreach (var category in Model.Categories)
                    {
                    <tr >
                        <td style="padding:0.75px 0.75px 0.75px 0.75px">@(sl++)</td>
                        <td style="padding:0.75px 0.75px 0.75px 0.75px">@category.CategoryCode</td>
                        <td style="padding:0.75px 0.75px 0.75px 0.75px">@category.CategoryName</td>
                        <td style="padding:0.75px 0.75px 0.75px 0.75px">
                            <a href="/Category/UpdateCategory?id=@category.CategoryId"><i class="fa fa-edit " style="color:forestgreen"></i> </a>
                            <a href="/Category/GetCategoryDetails?id=@category.CategoryId"><i class="fa fa-info" style="color:blue">  </i></a>
                            <a href="/Category/DeleteCategory?id=@category.CategoryId"><i class="fa fa-trash" style="color:red">   </i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}